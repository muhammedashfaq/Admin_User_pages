<form action="" method="post"> 
    <h1 class="h11">ADD NEW USER</h1> 
   <input  class="inp" type="text" id="name" name="name" placeholder="ENTER YOUR NAME" required>
   <p id="er1" style="color: red;text-align: center;"></p>


   <input class="inp" type="email" id="email" name="email" placeholder="ENTER YOUR EMAIL" required>

   <p id="er2" style="color: red;text-align: center;"></p>
   <% if(typeof alert !== 'undefined'){ %>
    <p id="er2" style="color: red;text-align: center;"><%= alert%></p>
    <% } %>

  
   <div class="inp1">
   <label for="gender">Gender:</label>
   <input type="radio" id="male" name="gender" value="male" >
   <label for="male">Male</label>
   <input type="radio" id="female" name="gender" value="female" >
   <label for="female">Female</label>
   <input type="radio" id="other" name="gender" value="other" >
   <label for="other">Other</label>
   <p id="er4" style="color: red;text-align: center;"></p>

  </div>
  <br>
   <input class="inp" type="number" id="mob"  name="mob" placeholder="ADD YOUR MOBILE NUMBER" required >
   <p id="er3" style="color: red;text-align: center;"></p>

   <input class="inp" type="password" id="password" name="password" placeholder="ENTER YOUR PASSWORD" required>
   <p id="er5" style="color: red;text-align: center;"></p>

   <br><br>
  
    <div class="adBtn" >

   <input class="btn btn-success but" type="submit" onclick="validation()" value="Add User" required>
   

    <a href="/admin/dashboard">Back</a>
  </div>
</form> 
