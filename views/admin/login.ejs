<form action="" method="post"> 
    <h1>Admin Login</h1>

   <input class="inp" type="email" id="email" name="email" placeholder="ENTER YOUR EMAIL" required >
   <p id="er1" style="color: red;text-align: center;"></p>

   <input class="inp" type="password" id="password" name="password" placeholder="ENTER YOUR PASSWORD" required>
   
   <p id="er2" style="color: red;text-align: center;"></p>

   <input class="btn btn-success but" type="submit" onclick="validation()" value="Sign In">
   
</form> 




