<script>
function validation() {
    const email = document.getElementById("email").value;
    const password = document.getElementById("password").value;



   
    if (email === "") {
        document.getElementById('er1').innerText='Email must be filled out '
    }
    
    if (password === "") {
        document.getElementById('er2').innerText='password must be filled out '
    }
    
}
</script>


