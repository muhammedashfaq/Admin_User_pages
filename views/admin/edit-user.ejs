<div class="container">
<div class="box">

<form action="" method="post"> 
    <h1 class="h11">EDIT USER</h1> 
   <input class="inp" type="text" name="name" placeholder="ENTER YOUR NAME" value="<%= data.name%>" required>
   <br><br>
   <input class="inp" type="email" name="email" placeholder="ENTER YOUR EMAIL"  value="<%= data.email%>"required>
   <br><br>
   <label class="inp1" for="gender">Gender:</label>
   <input type="radio" id="male" name="gender" value="male" <% if(data.gender == "male"){%> checked <% }%> required >
   <label for="male">Male</label>
   <input type="radio" id="female" name="gender" value="female" <% if(data.gender == "female"){%> checked <% }%> required>
   <label for="female">Female</label>
   <input type="radio" id="other" name="gender" value="other" <% if(data.gender == "other"){%> checked <% }%> required>
   <label for="other">Other</label><br>
   <input class="inp" type="number" name="mob" placeholder="ENTER YOUR MOBILE NUMBER" value="<%= data.mob%>" required>
   <br><br>
   <input class="inp" type="password" name="password" placeholder="ENTER YOUR PASSWORD" value="<%= data.password%>" required>
   <br><br>
 

    <input type="hidden" name="id" value="<%= data._id %>">
    <div class="edBtn">
   <input class="btn btn-success" type="submit" value="Edit User">

        <a href="/admin/dashboard">back</a>
    </div>
</form> 




